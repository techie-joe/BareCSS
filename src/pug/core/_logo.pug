block append style
  style.
    #logo {
      font-weight: 600;
      margin-left: -.5rem;
      margin-right: .25rem;
      padding: .25rem .5rem;
      display: inline-block;
      cursor: default;
      border-radius: .3rem;
    }
    #logo .s1 { color:#000 }
    #logo .s2 { color:#6481ff }
    ._dark #logo .s1 { color:#fff }
    a #logo { cursor:pointer }
    a #logo:hover { background-color:#8883 }
    a #logo:active { opacity:.3 }
    .maindesc {
      font-size: 0.9em;
      line-height: 1.25;
      vertical-align: text-top;
    }
  //- style.

mixin logo(s1,s2)
  #logo|#[span.s1!=s1||'Bare']#[span.s2!=s2||'CSS']
